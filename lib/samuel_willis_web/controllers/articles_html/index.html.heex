<section class="space-y-4">
  <.header>
    Articles
  </.header>

  <%= for article <- @articles do %>
    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">
        <.link navigate={~p"/articles/#{article}"}>
          <%= article.title %>
        </.link>
      </h2>

      <%= article.description %>
    </div>
  <% end %>
</section>
