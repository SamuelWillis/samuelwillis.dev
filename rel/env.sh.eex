#!/bin/sh

# configure node for distributed erlang with IPV6 support
export ERL_AFLAGS="-proto_dist inet6_tcp"
export ECTO_IPV6="true"
export DNS_CLUSTER_QUERY="${FLY_APP_NAME}.internal"
export RELEASE_DISTRIBUTION="name"
# I adjusted the RELEASE_NODE value here.
# If I was actually clusting the RELEASE_NODE value should be set to:
# RELEASE_NODE="${FLY_APP_NAME}-${FLY_IMAGE_REF##*-}@${FLY_PRIVATE_IP}"
export RELEASE_NODE="${FLY_APP_NAME}@${FLY_PRIVATE_IP}"
